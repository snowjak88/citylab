<!-- UI elements associated with the GameScreen view -->
<table oneColumn="true" defaultPad="2" tableAlign="topLeft"
	fillParent="true" defaultFillX="true">
	<!-- Top menu-bar -->
	<menuBar id="menubar" expandX="true" fillY="true">
		<menu id="menubar-file" text="@game-menu-file">
			<menuItem>@game-menu-file-open</menuItem>
			<menuItem>@game-menu-file-save</menuItem>
			<menuItem onChange="app:exit">@game-menu-file-exit</menuItem>
		</menu>
	</menuBar>
</table>